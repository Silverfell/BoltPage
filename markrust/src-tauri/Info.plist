<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Application Category -->
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.productivity</string>
	
	<!-- Bundle Display Name -->
	<key>CFBundleDisplayName</key>
	<string>MarkRust</string>
	
	<!-- Bundle Get Info String -->
	<key>CFBundleGetInfoString</key>
	<string>MarkRust 1.0.0, Copyright Â© 2024 MarkRust Contributors</string>
	
	<!-- Document Types Configuration -->
	<key>CFBundleDocumentTypes</key>
	<array>
		<!-- Markdown Files -->
		<dict>
			<key>CFBundleTypeExtensions</key>
			<array>
				<string>md</string>
				<string>markdown</string>
				<string>mdown</string>
				<string>mkd</string>
				<string>mkdn</string>
			</array>
			<key>CFBundleTypeIconFile</key>
			<string>icon</string>
			<key>CFBundleTypeName</key>
			<string>Markdown Document</string>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>LSHandlerRank</key>
			<string>Owner</string>
			<key>LSItemContentTypes</key>
			<array>
				<string>net.daringfireball.markdown</string>
				<string>public.plain-text</string>
			</array>
		</dict>
		<!-- Text Files (fallback) -->
		<dict>
			<key>CFBundleTypeExtensions</key>
			<array>
				<string>txt</string>
			</array>
			<key>CFBundleTypeIconFile</key>
			<string>icon</string>
			<key>CFBundleTypeName</key>
			<string>Plain Text Document</string>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>LSHandlerRank</key>
			<string>Alternate</string>
			<key>LSItemContentTypes</key>
			<array>
				<string>public.plain-text</string>
			</array>
		</dict>
	</array>
	
	<!-- Imported Type Declarations -->
	<key>UTImportedTypeDeclarations</key>
	<array>
		<!-- Markdown UTI -->
		<dict>
			<key>UTTypeConformsTo</key>
			<array>
				<string>public.plain-text</string>
				<string>public.text</string>
			</array>
			<key>UTTypeDescription</key>
			<string>Markdown Document</string>
			<key>UTTypeIdentifier</key>
			<string>net.daringfireball.markdown</string>
			<key>UTTypeTagSpecification</key>
			<dict>
				<key>public.filename-extension</key>
				<array>
					<string>md</string>
					<string>markdown</string>
					<string>mdown</string>
					<string>mkd</string>
					<string>mkdn</string>
				</array>
				<key>public.mime-type</key>
				<array>
					<string>text/markdown</string>
					<string>text/x-markdown</string>
				</array>
			</dict>
		</dict>
	</array>
	
	<!-- Exported Type Declarations (for future MarkRust-specific formats) -->
	<key>UTExportedTypeDeclarations</key>
	<array>
		<!-- MarkRust Enhanced Markdown -->
		<dict>
			<key>UTTypeConformsTo</key>
			<array>
				<string>net.daringfireball.markdown</string>
				<string>public.plain-text</string>
			</array>
			<key>UTTypeDescription</key>
			<string>MarkRust Enhanced Markdown</string>
			<key>UTTypeIdentifier</key>
			<string>com.markrust.enhanced-markdown</string>
			<key>UTTypeTagSpecification</key>
			<dict>
				<key>public.filename-extension</key>
				<array>
					<string>mrmd</string>
				</array>
				<key>public.mime-type</key>
				<array>
					<string>text/x-markrust-markdown</string>
				</array>
			</dict>
		</dict>
	</array>
	
	<!-- URL Schemes (for future integration) -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>com.markrust.markrust</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>markrust</string>
			</array>
		</dict>
	</array>
	
	<!-- Services Integration -->
	<key>NSServices</key>
	<array>
		<dict>
			<key>NSMenuItem</key>
			<dict>
				<key>default</key>
				<string>Open in MarkRust</string>
			</dict>
			<key>NSMessage</key>
			<string>openWithMarkRust</string>
			<key>NSPortName</key>
			<string>MarkRust</string>
			<key>NSSendTypes</key>
			<array>
				<string>public.plain-text</string>
				<string>net.daringfireball.markdown</string>
			</array>
		</dict>
	</array>
	
	<!-- Human Interface Guidelines Compliance -->
	<key>LSMinimumSystemVersion</key>
	<string>10.13</string>
	
	<!-- Allow Multiple Instances -->
	<key>LSMultipleInstancesProhibited</key>
	<false/>
	
	<!-- File System Access -->
	<key>NSSupportsAutomaticGraphicsSwitching</key>
	<true/>
	
	<!-- Quick Look Integration -->
	<key>QLSupportedContentTypes</key>
	<array>
		<string>net.daringfireball.markdown</string>
	</array>
</dict>
</plist>