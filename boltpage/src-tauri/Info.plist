<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Application Category -->
	<key>LSApplicationCategoryType</key>
	<string>public.app-category.productivity</string>
	
	<!-- Bundle Display Name -->
    <key>CFBundleDisplayName</key>
    <string>BoltPage</string>
	
	<!-- Bundle Get Info String -->
    <key>CFBundleGetInfoString</key>
    <string>BoltPage 1.1.0, Copyright Â© 2024 BoltPage Contributors</string>
	
		<!-- Document Types Configuration (macOS authoritative; Tauri won't merge when a custom plist exists) -->
		<key>CFBundleDocumentTypes</key>
		<array>
			<!-- Markdown Files -->
			<dict>
				<key>CFBundleTypeExtensions</key>
				<array>
					<string>md</string>
					<string>markdown</string>
					<string>mdown</string>
					<string>mkd</string>
					<string>mkdn</string>
				</array>
				<key>CFBundleTypeIconFile</key>
				<string>icon</string>
				<key>CFBundleTypeName</key>
				<string>Markdown Document</string>
				<key>CFBundleTypeRole</key>
				<string>Editor</string>
				<key>LSHandlerRank</key>
				<string>Owner</string>
				<key>LSItemContentTypes</key>
				<array>
					<string>net.daringfireball.markdown</string>
					<string>public.plain-text</string>
				</array>
			</dict>
			<!-- Text Files (fallback) -->
			<dict>
				<key>CFBundleTypeExtensions</key>
				<array>
					<string>txt</string>
				</array>
				<key>CFBundleTypeIconFile</key>
				<string>icon</string>
				<key>CFBundleTypeName</key>
				<string>Plain Text Document</string>
				<key>CFBundleTypeRole</key>
				<string>Editor</string>
				<key>LSHandlerRank</key>
				<string>Owner</string>
				<key>LSItemContentTypes</key>
				<array>
					<string>public.plain-text</string>
				</array>
			</dict>
			<!-- JSON Files -->
			<dict>
				<key>CFBundleTypeExtensions</key>
				<array>
					<string>json</string>
				</array>
				<key>CFBundleTypeIconFile</key>
				<string>icon</string>
				<key>CFBundleTypeName</key>
				<string>JSON Document</string>
				<key>CFBundleTypeRole</key>
				<string>Editor</string>
				<key>LSHandlerRank</key>
				<string>Owner</string>
				<key>LSItemContentTypes</key>
				<array>
					<string>public.json</string>
					<string>public.plain-text</string>
				</array>
			</dict>
			<!-- YAML Files -->
			<dict>
				<key>CFBundleTypeExtensions</key>
				<array>
					<string>yaml</string>
					<string>yml</string>
				</array>
				<key>CFBundleTypeIconFile</key>
				<string>icon</string>
				<key>CFBundleTypeName</key>
				<string>YAML Document</string>
				<key>CFBundleTypeRole</key>
				<string>Editor</string>
				<key>LSHandlerRank</key>
				<string>Owner</string>
				<key>LSItemContentTypes</key>
				<array>
					<string>public.yaml</string>
					<string>public.plain-text</string>
				</array>
			</dict>
		</array>
	
	<!-- Imported Type Declarations -->
	<key>UTImportedTypeDeclarations</key>
	<array>
		<!-- Markdown UTI -->
		<dict>
			<key>UTTypeConformsTo</key>
			<array>
				<string>public.plain-text</string>
				<string>public.text</string>
			</array>
			<key>UTTypeDescription</key>
			<string>Markdown Document</string>
			<key>UTTypeIdentifier</key>
			<string>net.daringfireball.markdown</string>
			<key>UTTypeTagSpecification</key>
			<dict>
				<key>public.filename-extension</key>
				<array>
					<string>md</string>
					<string>markdown</string>
					<string>mdown</string>
					<string>mkd</string>
					<string>mkdn</string>
				</array>
				<key>public.mime-type</key>
				<array>
					<string>text/markdown</string>
					<string>text/x-markdown</string>
				</array>
			</dict>
		</dict>
		<!-- YAML UTI -->
		<dict>
			<key>UTTypeConformsTo</key>
			<array>
				<string>public.plain-text</string>
				<string>public.text</string>
			</array>
			<key>UTTypeDescription</key>
			<string>YAML Document</string>
			<key>UTTypeIdentifier</key>
			<string>public.yaml</string>
			<key>UTTypeTagSpecification</key>
			<dict>
				<key>public.filename-extension</key>
				<array>
					<string>yaml</string>
					<string>yml</string>
				</array>
				<key>public.mime-type</key>
				<array>
					<string>text/yaml</string>
					<string>text/x-yaml</string>
					<string>application/x-yaml</string>
				</array>
			</dict>
		</dict>
	</array>
	
    <!-- Exported Type Declarations (for future BoltPage-specific formats) -->
	<key>UTExportedTypeDeclarations</key>
	<array>
        <!-- BoltPage Enhanced Markdown -->
		<dict>
			<key>UTTypeConformsTo</key>
			<array>
				<string>net.daringfireball.markdown</string>
				<string>public.plain-text</string>
			</array>
            <key>UTTypeDescription</key>
            <string>BoltPage Enhanced Markdown</string>
			<key>UTTypeIdentifier</key>
            <string>com.boltpage.enhanced-markdown</string>
			<key>UTTypeTagSpecification</key>
			<dict>
				<key>public.filename-extension</key>
				<array>
					<string>mrmd</string>
				</array>
				<key>public.mime-type</key>
				<array>
            <string>text/x-boltpage-markdown</string>
				</array>
			</dict>
		</dict>
	</array>
	
	<!-- URL Schemes (for future integration) -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
            <key>CFBundleURLName</key>
            <string>com.boltpage.boltpage</string>
			<key>CFBundleURLSchemes</key>
			<array>
                <string>boltpage</string>
			</array>
		</dict>
	</array>
	
	<!-- Services Integration -->
	<key>NSServices</key>
	<array>
		<dict>
			<key>NSMenuItem</key>
			<dict>
				<key>default</key>
                <string>Open in BoltPage</string>
			</dict>
			<key>NSMessage</key>
            <string>openWithBoltPage</string>
			<key>NSPortName</key>
            <string>BoltPage</string>
			<key>NSSendTypes</key>
			<array>
				<string>public.plain-text</string>
				<string>net.daringfireball.markdown</string>
			</array>
		</dict>
	</array>
	
	<!-- Human Interface Guidelines Compliance -->
	<key>LSMinimumSystemVersion</key>
	<string>10.13</string>
	
	<!-- Allow Multiple Instances -->
	<key>LSMultipleInstancesProhibited</key>
	<false/>
	
	<!-- File System Access -->
	<key>NSSupportsAutomaticGraphicsSwitching</key>
	<true/>
	
	<!-- Quick Look Integration -->
	<key>QLSupportedContentTypes</key>
	<array>
		<string>net.daringfireball.markdown</string>
		<string>public.json</string>
		<string>public.yaml</string>
		<string>public.plain-text</string>
	</array>
</dict>
</plist>
